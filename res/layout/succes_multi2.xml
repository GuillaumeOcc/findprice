<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#eaefee"
                android:padding="10dip"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FÃ©licitation"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/linear2"
                    android:background="@drawable/custom_shape"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="70dip" android:paddingRight="70dip"
                    android:paddingTop="70dip" android:paddingBottom="70dip"
                    android:orientation="vertical"
            >

        <TextView
                android:id="@+id/text_joueur1"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Joueur 1"
                android:paddingBottom="10dip"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                />

        <EditText
                android:id="@+id/enter_name"
                android:hint="Entrez votre nom   "
                android:singleLine="true"
                android:layout_below="@id/text_joueur1"
                android:inputType="textPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

        <TextView
                android:id="@+id/text_joueur2"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Joueur 2"
                android:layout_below="@id/enter_name"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dip"
                />

        <EditText
                android:id="@+id/enter_name2"
                android:hint="Entrez votre nom   "
                android:singleLine="true"
                android:layout_below="@id/text_joueur2"
                android:inputType="textPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />


        <Button
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/button_save_score"
                android:text="Valider"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/enter_name2"
                android:background="@drawable/button_blue"
                android:layout_marginTop="20dip"
                android:padding="20dip"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                ></Button>
    </RelativeLayout>
</RelativeLayout>